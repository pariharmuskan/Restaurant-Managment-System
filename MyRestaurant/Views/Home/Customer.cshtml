@model MyRestaurant.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Restaurant Management Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Add your custom CSS for signup page here -->
    <style>
        /* Customize your styles for the signup page */
        /* Example styles for the container */
        .back-page {
            background: linear-gradient(rgba(15, 23, 43, .9), rgba(15, 23, 43, .9)), url('../Image/cuisine-food-india-indian-wallpaper-preview.jpg');
            background-position: center center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Example styles for the signup card */
        .signup-card {
            width: 100%;
            max-width: 800px; /* Adjusted max-width for better image visibility */
            border: none;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

        /* Example styles for the signup form */
        .signup-form {
            background-color: #ffffff;
            padding: 30px; /* Added padding to the form */
        }

        /* Example styles for the image */
        .signup-image {
            width: 100%;
            height: 100%; /* Set image height to 100% */
            object-fit: cover;
            margin: 0; /* Remove any margin */
        }

        /* Example styles for input fields with floating labels */
        .form-group {
            position: relative;
            margin-bottom: 15px;
        }

            .form-group input {
                padding: 15px;
                border: none; /* Remove border */
                border-bottom: 1px solid #ced4da; /* Keep only the bottom border */
                border-radius: 0; /* Remove border-radius */
                transition: border-color 0.3s ease, box-shadow 0.3s ease; /* Add box-shadow transition */
            }

            .form-group label {
                position: absolute;
                top: 50%;
                left: 20px;
                transform: translateY(-50%);
                color: #495057;
                transition: top 0.3s ease, font-size 0.3s ease, color 0.3s ease;
            }

            .form-group .icon {
                position: absolute;
                top: 50%;
                right: 20px;
                transform: translateY(-50%);
                font-size: 20px;
                color: #ced4da;
                pointer-events: none; /* Prevent the icon from being clickable */
                opacity: 1; /* Initially show the icon */
                transition: opacity 0.3s ease, color 0.3s ease; /* Add opacity and color transition */
            }

            .form-group input:focus {
                border-color: transparent; /* Hide the bottom border */
                box-shadow: 0 3px 5px rgba(255, 140, 0, 0.25); /* Add a box shadow to simulate the border */
            }

                .form-group input:focus + label, .form-group input:not(:placeholder-shown) + label {
                    top: 10px;
                    font-size: 12px;
                    color: #ff8c00;
                }

                .form-group input:focus + .icon {
                    opacity: 0; /* Hide the icon on focus */
                    color: #ff8c00; /* Show orange-colored icon on focus */
                }

        .cylindrical-btn {
            display: inline-block;
            padding: 10px 20px; /* Adjust padding for button size */
            border-radius: 50px; /* Use a large value for a cylindrical shape */
            background-color: #ff8c00; /* Orange color */
            color: #fff; /* Text color */
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            /* Add hover effect for dark orange color */
            .cylindrical-btn:hover {
                background-color: #c66b00; /* Dark orange color */
                transform: scale(1.05); /* Slightly scale up on hover */
            }
    </style>
</head>
<body>

    <div class="container back-page">
        <!-- Responsive Card for Signup -->
        <div class="card signup-card signup-page">
            <div class="row g-0">
                <div class="col-md-6">
                    <div class="card-body signup-form">
                        <h2 class="card-title text-center mb-4">Restaurant Signup</h2>
                        <!-- Your signup form here -->
                        <form method ="post" action="Add">
                            <div class="mb-3 form-group">
                                <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" asp-for="CustomerName" placeholder=" " required>
                                <label for="name">Name</label>
                                <i class="icon fas fa-user"></i>
                            </div>
                            <div class="mb-3 form-group">
                                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" asp-for="CustomerEmail" placeholder=" " required>
                                <label for="email">Email</label>
                                <i class="icon fas fa-envelope"></i>
                            </div>
                            <div class="mb-3 form-group">
                                <input type="tel" class="form-control" id="phone" name="phone" aria-describedby="emailHelp" asp-for="CustomerPhone" placeholder=" " required>
                                <label for="phone">Phone</label>
                                <i class="icon fas fa-phone-alt"></i>
                            </div>
                            <div class="mb-3 form-group">
                                <input type="password" class="form-control" id="password" name="password" aria-describedby="emailHelp" asp-for="Password" placeholder=" " required>
                                <label for="password">Password</label>
                                <i class="icon fas fa-lock"></i>
                            </div>
                           @*  <div class="mb-3 form-group">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder=" " required>
                                <label for="confirmPassword">Confirm Password</label>
                                <i class="icon fas fa-lock"></i>
                            </div> *@
                            <button type="submit" class="cylindrical-btn btn btn-primary w-100">Signup</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <img class="signup-image" src="~/Image/pngtree-an-arrangement-of-various-indian-food-picture-image_2778221.jpg" alt="Signup Image">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

    <script>
        // Add jQuery validation logic here
        $(document).ready(function () {
            $('form').submit(function (e) {
                e.preventDefault();

                // Add your validation logic here

                // For demonstration purposes, let's simulate a successful validation
                if (Math.random() < 0.5) {
                    $('.form-group').removeClass('error').addClass('success');
                } else {
                    $('.form-group').removeClass('success').addClass('error');
                }
            });

            // Add icon visibility logic on input focus
            $('.form-group input').focus(function () {
                $(this).siblings('.icon').css('opacity', 0);
            });

            $('.form-group input').blur(function () {
                if (!$(this).val()) {
                    $(this).siblings('.icon').css('opacity', 1);
                }
            });
        });
    </script>
</body>
</html>




